			uniform fixed4 _TextureSampleAdd;
			uniform float4 _ClipRect;
			uniform sampler2D _MainTex;
			uniform float _AnimSpeed;
			uniform sampler2D _ButtonDown;
			uniform float4 _ButtonDown_ST;
			uniform sampler2D _ButtonUp;
			uniform float4 _ButtonUp_ST;

			
